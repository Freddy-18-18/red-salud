# ============================================================================
# RED SALUD - PHARMACY ERP/POS SYSTEM
# Environment Variables Configuration
# ============================================================================

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Application Configuration
NEXT_PUBLIC_APP_NAME=Red Salud
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# Currency Configuration
NEXT_PUBLIC_DEFAULT_CURRENCY=VES
NEXT_PUBLIC_SECONDARY_CURRENCY=USD
BCV_RATE_API_URL=https://bcv-api.example.com

# POS Configuration
NEXT_PUBLIC_POS_TIMEOUT_MINUTES=30
NEXT_PUBLIC_MAX_CART_ITEMS=100
NEXT_PUBLIC_FRACTIONAL_SALE_ENABLED=true

# Inventory Configuration
NEXT_PUBLIC_FEFO_ENABLED=true
NEXT_PUBLIC_EXPIRY_WARNING_DAYS=90
NEXT_PUBLIC_EXPIRY_CRITICAL_DAYS=30

# Invoice Configuration
NEXT_PUBLIC_INVOICE_PREFIX=INV
NEXT_PUBLIC_INVOICE_NUMBER_LENGTH=4
NEXT_PUBLIC_FISCAL_CONTROL_ENABLED=true

# SMS Configuration (Optional)
SMS_PROVIDER=twilio
SMS_FROM_NUMBER=+58XXXXXXXXXX
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=6
BACKUP_RETENTION_DAYS=30

# Offline Configuration
OFFLINE_MODE_ENABLED=true
OFFLINE_SYNC_INTERVAL_MINUTES=5

# Logging Configuration
LOG_LEVEL=info
AUDIT_LOG_ENABLED=true
AUDIT_LOG_RETENTION_DAYS=90

# Development
NODE_ENV=development
NEXT_PUBLIC_DEBUG_MODE=false
